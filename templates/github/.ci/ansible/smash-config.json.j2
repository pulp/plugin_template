{
  "pulp": {
    "auth": [
      "admin",
      "password"
    ],
    "selinux enabled": false,
    "version": "3",
    "aiohttp_fixtures_origin": "{{ aiohttp_fixtures_origin }}"
  },
  "hosts": [
    {
      "hostname": "pulp",
      "roles": {
        "api": {
          "port": {{ 443 if pulp_scheme == 'https' else 80 }},
          "scheme": "{{ pulp_scheme }}",
          "service": "nginx"
        },
        "content": {
          "port": {{ 443 if pulp_scheme == 'https' else 80 }},
          "scheme": "{{ pulp_scheme }}",
          "service": "pulp_content_app"
        },
        "pulp resource manager": {},
        "pulp workers": {},
        "redis": {},
        "shell": {
          "transport": "local"
        }
      }
    }
  ]
{%- if docker_fixtures -%}
  ,
  "custom": {
    "fixtures_origin": "http://pulp-fixtures:8080/"
  }
{%- endif %}
}
