#!/bin/bash

{% include 'header.j2' %}

set -euv

# make sure this script runs at the repo root
cd "$(dirname "$(realpath -e "$0")")"/../../..


mkdir ~/.gem || true
touch ~/.gem/credentials
echo "---
:rubygems_api_key: $RUBYGEMS_API_KEY" > ~/.gem/credentials
sudo chmod 600 ~/.gem/credentials

export response=$(curl --write-out %{http_code} --silent --output /dev/null https://rubygems.org/gems/{{ plugin_snake }}_client/versions/$1)

if [ "$response" == "200" ];
then
  echo "{{ plugin_name }} $VERSION has already been released. Skipping."
  exit
fi

GEM_FILE="$(ls {{ plugin_snake }}_client-*)"
gem push ${GEM_FILE}
