#!/bin/bash

{% include 'header.j2' %}

# make sure this script runs at the repo root
cd "$(dirname "$(realpath -e "$0")")/../../.."

set -euv

for SHA in $(curl -H "Authorization: token $GITHUB_TOKEN" "$GITHUB_CONTEXT" | jq -r '.[].sha')
do
  python3 .ci/scripts/validate_commit_message.py "$SHA"
  VALUE=$?
  if [ "$VALUE" -gt 0 ]; then
    exit $VALUE
  fi
done
