---
name: Pulp Nightly CI/CD
on:
  schedule:
    # * is a special character in YAML so you have to quote this string
    # runs at 23:00 daily
    - cron: '00 23 * * *'

jobs:
  test:
    runs-on: ubuntu-latest

    strategy:
      fail-fast: false
      matrix:
        env:
          - TEST: pulp
          - TEST: docs
          - TEST: s3
          {%- if test_bindings %}
          - TEST: bindings
          {%- endif %}
          {%- if test_released_plugin_with_next_pulpcore_release %}
          - TEST: plugin-from-pypi
          {%- endif %}

    steps:
      - uses: actions/checkout@v2
        with:
          # by default, it uses a depth of 1
          # this fetches all history so that we can read each commit
          fetch-depth: 0

      - uses: actions/setup-python@v2
        with:
          python-version: "3.7"

      - name: Install httpie
        run: |
          echo ::group::HTTPIE
          sudo apt-get update -yq
          sudo -E apt-get -yq --no-install-suggests --no-install-recommends install httpie
          echo ::endgroup::
          echo "HTTPIE_CONFIG_DIR=$GITHUB_WORKSPACE/.ci/assets/httpie/" >> $GITHUB_ENV
          echo "TEST={{ "${{ matrix.env.TEST }}" }}" >> $GITHUB_ENV

      - name: Before Install
        run: .github/workflows/scripts/before_install.sh
        shell: bash

      - name: Install
        run: .github/workflows/scripts/install.sh
        env:
          PY_COLORS: '1'
          ANSIBLE_FORCE_COLOR: '1'
        shell: bash

      - name: Before Script
        run: |
          .github/workflows/scripts/before_script.sh

      - name: Script
        run: .github/workflows/scripts/script.sh
        shell: bash

  publish:
    runs-on: ubuntu-latest
    needs: test

    env:
      TEST: publish

    steps:
      - uses: actions/checkout@v2
        with:
          # by default, it uses a depth of 1
          # this fetches all history so that we can read each commit
          fetch-depth: 0

      - uses: actions/setup-python@v2
        with:
          python-version: "3.7"

      - uses: actions/setup-ruby@v1
        with:
          ruby-version: "2.6"

      - name: Install httpie
        run: |
          echo ::group::HTTPIE
          sudo apt-get update -yq
          sudo -E apt-get -yq --no-install-suggests --no-install-recommends install httpie
          echo ::endgroup::
          echo "HTTPIE_CONFIG_DIR=$GITHUB_WORKSPACE/.ci/assets/httpie/" >> $GITHUB_ENV

      - name: Install python dependencies
        run: |
          echo ::group::PYDEPS
          pip install wheel
          echo ::endgroup::

      - name: Before Install
        run: .github/workflows/scripts/before_install.sh
        shell: bash

      - name: Install
        run: .github/workflows/scripts/install.sh
        env:
          PY_COLORS: '1'
          ANSIBLE_FORCE_COLOR: '1'
        shell: bash

      - name: Before Script
        run: .github/workflows/scripts/before_script.sh

      {% if deploy_daily_client_to_rubygems %}
      - name: Publish nightly client to rubygems
        run: .ci/scripts/publish_client_gem.sh
        shell: bash
        env:
          RUBYGEMS_API_KEY: {{ "${{ secrets.RUBYGEMS_API_KEY }}" }}
      {% endif %}

      {% if deploy_daily_client_to_pypi %}
      - name: Publish nightly client to pypi
        run: .ci/scripts/publish_client_pypi.sh
        shell: bash
        env:
          PYPI_PASSWORD: {{ "${{ secrets.PYPI_PASSWORD }}" }}
      {% endif %}

      {% if publish_docs_to_pulpprojectdotorg %}
      - name: Publish nightly docs
        env:
          BRANCH: ${GITHUB_REF##*/}
          PULP_DOCS_KEY: {% raw %}${{ secrets.PULP_DOCS_KEY }}{% endraw %}
        run: .ci/scripts/publish_docs.sh nightly $BRANCH
      {% endif %}

      {%- if test_performance %}
        {%- if test_performance is iterable %}
          {%- for test in test_performance %}
      - name: "{{test}} performance test"
        env:
          TEST: performance
          PERFORMANCE_TEST: {{test}}
        run: .github/workflows/scripts/script.sh

          {%- endfor %}
        {%- else %}
      - name: Performance test
        env:
          TEST: performance
        run: .github/workflows/scripts/script.sh
        {%- endif %}
      {%- endif %}

      - name: After failure
        if: failure()
        run: |
          http --timeout 30 --check-status --pretty format --print hb http://pulp/pulp/api/v3/status/ || true
          docker images || true
          docker ps -a || true
          docker logs pulp || true
          docker exec pulp ls -latr /etc/yum.repos.d/ || true
          docker exec pulp cat /etc/yum.repos.d/* || true
          {%- if plugin_name == 'pulp_rpm' %}
          docker exec pulp ls -latr /etc/yum.repos.d/
          docker exec pulp cat /etc/yum.repos.d/*
          {%- endif %}
